/* pages/get_nickname/get_nickname.wxss */
.title-container {
    display: flex;
    justify-content: center;
    margin-top: 80rpx;
    margin-bottom: 30rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
}

.nickname-container {
    margin: 50rpx 30rpx;
    padding: 30rpx;
    background-color: #f9f9f9;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-section {
    margin-bottom: 30rpx;
}

.label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 15rpx;
}

.nickname-input {
    width: 100%;
    height: 80rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    padding: 0 20rpx;
    background-color: #fff;
    font-size: 28rpx;
}

.button-section {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin: 30rpx 0;
}

.wx-btn, .save-btn {
    width: 100%;
    font-size: 28rpx;
}

.result-section {
    margin-top: 40rpx;
    padding: 20rpx;
    background-color: #e6f7ff;
    border-radius: 8rpx;
    border-left: 8rpx solid #1890ff;
}

.result-label {
    font-size: 28rpx;
    color: #666;
    margin-right: 10rpx;
}

.result-nickname {
    font-size: 32rpx;
    font-weight: bold;
    color: #1890ff;
}

.back-button {
    margin-top: 50rpx;
    display: flex;
    justify-content: center;
}

.back-btn {
    width: 80%;
}