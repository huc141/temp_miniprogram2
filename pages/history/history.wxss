.box {
  width: 600rpx;
  height: 300rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  justify-content: center; /* 改回居中 */
  align-items: center;
  gap: 50rpx; /* 添加元素之间的间距 */
  padding: 0 30rpx;
  box-sizing: border-box;
}

.inner-box {
  width: 180rpx;
  height: 80rpx;
  background-color: #c8f7d0;
  border-radius: 10rpx; /* 增加圆角 */
  display: flex;
  justify-content: center;
  align-items: center;
  /* 重置button默认样式 */
