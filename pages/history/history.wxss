/* pages/history/history.wxss */

.container {
  margin-top: 120rpx; /* 整体容器与屏幕顶部的距离 */
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
  align-items: center; /* 水平居中 */
  padding: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx; /* 标题与按钮之间的距离 */
  text-align: center;
}

.custom-button {
  background-color: #c8f7d0; /* 淡绿色背景 */
  color: #333; /* 深色文字，提高对比度 */
  font-weight: 500;
  border-radius: 10rpx;
  width: 80%; /* 按钮宽度 */
  transition: all 0.2s ease; /* 添加过渡效果 */
}

/* 按钮点击反馈样式 */
.button-hover {
  background-color: #a0e6a8; /* 点击时背景色变深 */
  transform: scale(0.98); /* 轻微缩小效果 */
  opacity: 0.9; /* 轻微透明效果 */
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1) inset; /* 内阴影效果 */
}

