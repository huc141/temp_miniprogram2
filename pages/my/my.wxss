/* pages/my/my.wxss */

.custom-button {
  margin-top: 120rpx; /* 整体容器与屏幕顶部的距离 */
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
  align-items: center; /* 水平居中 */
  padding: 10rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 10rpx;
  border-radius: 20rpx;
  background-color: #d7f497;
}

.item-image {
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
  padding: 5rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.grade-text {
  color: #333;
  font-size: 24rpx;
}


.grade {
  font-size: 28rpx;
  color: #ff6b6b;
  margin-bottom: 10rpx;
}

.grade-text {
  color: #333;
}

.grade-value {
  color: #ff6b6b;
  font-weight: bold;
}

.nation {
  font-size: 24rpx;
  color: #666;
}

.nation-text {
  color: #666;
}

.runtime {
  color: #666;
}


