<!--index.wxml-->
<navigation-bar title="Weixin" back="{{false}}" color="black" background="#FFF"></navigation-bar>

<!-- 页面主体内容 -->
<view class="page-container">
  <!-- 欢迎提示区 -->
  <view class="tips">
    <text class="iconfont icon-tishi3 icon"></text>
    <text>欢迎学习微信小程序~</text>
  </view>
  
  <!-- 通知公告布局 -->
  <view class="notice-container">
    <image src="/images/notice/notice.png" class="notice-icon"></image>
    <view class="notice-content">公告内容</view>
  </view>
  
  <!-- 分享按钮区 -->
  <view class="section-title">分享给好友</view>
  <view class="share-container">
    <button class="share-btn" open-type="share">
      <image src="/images/menu/dianshiji.png" class="share-icon"></image>
      <text>分享给朋友</text>
    </button>
    
    <button class="share-btn" bindtap="shareToTimeline">
      <image src="/images/menu/dianshiji.png" class="share-icon"></image>
      <text>分享到朋友圈</text>
    </button>
  </view>

  <!-- 功能菜单区 -->
  <view class="section-title">功能菜单</view>
  <view class="menu">
    <view class="menu-item" bindtap="navigateToLocalStorage">
      <image src="/images/menu/bijiben.png" class="menu-icon"/>
      <text>本地存储</text>
    </view>
    
    <view class="menu-item" bindtap="navigateToLoadMore">
      <image src="/images/menu/chugui.png" class="menu-icon"/>
      <text>上滑加载</text>
    </view>

    <view class="menu-item" bindtap="navigateToScrollView">
      <image src="/images/menu/chuifengji.png" class="menu-icon"/>
      <text>scroll-view</text>
    </view>

    <view class="menu-item" bindtap="navigateToPageLifeCycle">
      <image src="/images/menu/dianbingxiang.png" class="menu-icon"/>
      <text>页面生命周期</text>
    </view>

    <view class="menu-item" bindtap="navigateToShareTimeline">
      <image src="/images/menu/dianshiji.png" class="menu-icon"/>
      <text>分享朋友圈</text>
    </view>

    <view class="menu-item" bindtap="navigateToGetUserAvatar">
      <image src="/images/menu/duntangguo.png" class="menu-icon"/>
      <text>获取用户头像</text>
    </view>

    <view class="menu-item" bindtap="navigateToGetUserNickname">
      <image src="/images/menu/kongtiao.png" class="menu-icon"/>
      <text>获取用户昵称</text>
    </view>

    <view class="menu-item">
      <image src="/images/menu/xiyiji.png" class="menu-icon"/>
      <text>洗衣机</text>
    </view>
  </view>

  <!-- 建筑展示区 -->
  <view class="section-title">建筑展示</view>
  <view class="architecture-container">
    <view class="architecture-item">
      <image src="/images/architecture/建筑01.png" class="architecture-image" mode="aspectFill"></image>
    </view>

    <view class="architecture-item">
      <image src="/images/architecture/建筑02.png" class="architecture-image" mode="aspectFill"></image>
    </view>

    <view class="architecture-item">
      <image src="/images/architecture/建筑03.png" class="architecture-image" mode="aspectFill"></image>
    </view>

    <view class="architecture-item">
      <image src="/images/architecture/建筑04.png" class="architecture-image" mode="aspectFill"></image>
    </view>
  </view>
</view>
  