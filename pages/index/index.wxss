/**index.wxss**/
page {
  background-color: #f7f7f7;
}

.page-container {
  padding-bottom: 30rpx;
}

/* 通用标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx 30rpx 20rpx;
  color: #333;
}

/* 提示样式 */
.tips {
  background-color: #edf8ff;
  color: #0081ff;
  padding: 20rpx;
  margin: 30rpx 20rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.icon {
  margin-right: 10rpx;
}

/* 通知栏样式 */
.notice-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.notice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.notice-content {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 分享按钮样式 */
.share-container {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width: 48%;
  height: 180rpx;
  padding: 0;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.share-btn text {
  font-size: 28rpx;
  color: #333;
}

/* 菜单样式 */
.menu {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.menu-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 15rpx;
  border-radius: 50%;
}

.menu-item text {
  font-size: 26rpx;
  color: #333;
}

/* 建筑展示样式 */
.architecture-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
  margin: 0 10rpx;
}

.architecture-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.architecture-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}